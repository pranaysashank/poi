-- Initial poi-bin.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                poi-bin
version:             0.1.0.0
synopsis:            The poi binary
description:         donno why this exists
homepage:            https://www.github.com/pranaysashank/poi
license:             MIT
license-file:        LICENSE
author:              Pranay Sashank
maintainer:          pranaysashank@gmail.com
category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10


library
  hs-source-dirs:      src
  exposed-modules:     Poi.Migrations.Migrate
                     , Poi.Migrations.Utils
                     , Poi.Migrations.Types
  build-depends:       base >= 4.7 && < 5
                     , directory
                     , filepath
                     , bytestring
                     , text
                     , process
                     , containers
                     , yaml
                     , postgresql-simple
                     , optparse-applicative
                     , time
                     , raw-strings-qq
                     , interpolatedstring-perl6
                     , ansi-terminal
  default-language:    Haskell2010

executable migrate-autoimporter
  build-depends:       base >= 4.7 && < 5
                     , directory
                     , filepath
                     , yaml
                     , interpolatedstring-perl6
  ghc-options:       -Wall
  main-is:           MigrateAutoImporter.hs
  default-language:  Haskell2010

executable poi
  build-depends:       base >=4.7 && < 5
                     , directory
                     , filepath
                     , bytestring
                     , text
                     , containers
                     , process
                     , yaml
                     , postgresql-simple
                     , time
                     , raw-strings-qq
                     , optparse-applicative
                     , interpolatedstring-perl6
                     , ansi-terminal
                     , poi-bin
  ghc-options:         -Wall -threaded -rtsopts
  main-is:             main.hs
  default-language:    Haskell2010

source-repository head
  type: git
  location: https://www.github.com/pranaysashank/poi
